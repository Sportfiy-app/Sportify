{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "../",
    "typeRoots": ["../node_modules/@types"],
    "types": ["jest", "node"],
    "noEmit": true
  },
  "include": ["**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules", "../dist"]
}
